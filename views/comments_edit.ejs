<%- include("partials/header") %>

<div class="container">
	<h1>Edit Comment</h1>
	<form action="/trails/<%= trailId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="text">Comment Text</label>
			<textarea class="form-control" name="text" id="text" rows="8" cols="80"><%= comment.text %></textarea>
		</div>
		<button type="submit" class="btn btn-success">
			Submit Comment
		</button>
	</form>
</div>

<%- include("partials/footer") %>